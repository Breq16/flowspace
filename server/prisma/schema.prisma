generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id BigInt @id

    // account data
    email        String   @unique
    password     String
    verified     Boolean  @default(false)
    registeredOn DateTime

    // user profile data
    name     String
    pronouns String?
    url      String?
    location String?
    bio      String?
}